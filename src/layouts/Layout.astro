---
import Navbar from "../components/Navbar";

const siteUrl = "https://startcode.id";
const siteTitle = "STARTCODE - Digital Solutions for Your Business";
const siteDescription = "Startcode helps businesses with cutting-edge digital solutions including web development, mobile apps, and AI-driven software.";
const imageUrl = "/startcode.svg";
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google Analytics Script -->
		<script async src={'https://www.googletagmanager.com/gtag/js?id=UA-23581568-13'}></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-23581568-13');
		</script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/startcode.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Optimized Meta Tags -->
		<title>{siteTitle}</title>
		<meta name="description" content={siteDescription} />
		<meta name="keywords" content="startcode, web development, mobile apps, AI solutions, Laravel, Next.js, digital transformation" />
		<meta name="author" content="Startcode Indonesia" />

		<!-- Open Graph (Facebook, WhatsApp, LinkedIn) -->
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={siteDescription} />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:image" content={imageUrl} />
		<meta property="og:type" content="website" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={siteTitle} />
		<meta name="twitter:description" content={siteDescription} />
		<meta name="twitter:image" content={imageUrl} />

		<!-- Canonical URL -->
		<link rel="canonical" href={siteUrl} />

		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
			{JSON.stringify({
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Startcode Indonesia",
				"url": siteUrl,
				"logo": imageUrl,
				"description": siteDescription,
				"sameAs": [
					"https://www.facebook.com/startcodeid",
					"https://twitter.com/startcodeid",
					"https://id.linkedin.com/company/startcodetech"
				]
			})}
		</script>
	</head>
	<body>
	<Navbar client:load />

		<slot />
	</body>
</html>

<style>
	html, body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
